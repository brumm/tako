{
  "name": "tako",
  "displayName": "Tako",
  "version": "0.0.6",
  "description": "Tako replaces the default Github repository file list with an expandable file tree for rapid exploration of repositories.",
  "main": "index.js",
  "engines": {
    "node": ">=12.14.1"
  },
  "scripts": {
    "build:chrome": "webpack --mode=production --config=webpack.config.chrome.js",
    "start:chrome": "webpack --watch --mode=development --config=webpack.config.chrome.js",
    "build:firefox": "webpack --mode=production --config=webpack.config.firefox.js",
    "start:firefox": "webpack --watch --mode=development --config=webpack.config.firefox.js",
    "build": "yarn build:chrome && yarn build:firefox",
    "postinstall": "yarn build > /dev/null && yarn clean:chrome && yarn clean:firefox",
    "clean:chrome": "find ./dist/chrome/unpacked-extension -type f -not -name 'manifest.json' -delete",
    "clean:firefox": "find ./dist/firefox/unpacked-extension -type f -not -name 'manifest.json' -delete",
    "start": "webpack --watch --mode=development",
    "lint": "eslint ./src/**/*.js"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": false,
    "jsxBracketSameLine": false,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "extensionManifest": {
    "chrome": {
      "name": "Tako — Github File Tree",
      "manifest_version": 2,
      "permissions": [
        "activeTab",
        "storage"
      ],
      "icons": {
        "16": "icon-16.png",
        "24": "icon-24.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      },
      "web_accessible_resources": [
        "tako.svg"
      ],
      "content_scripts": [
        {
          "matches": [
            "*://*.github.com/*"
          ],
          "js": [
            "content-script.js"
          ],
          "run_at": "document_end"
        }
      ],
      "background": {
        "scripts": [
          "background.js"
        ]
      }
    },
    "firefox": {
      "name": "Tako — Github File Tree",
      "manifest_version": 2,
      "permissions": [
        "*://*.github.com/*",
        "activeTab",
        "storage"
      ],
      "applications": {
        "gecko": {
          "id": "philipp.brumm@gmail.com"
        }
      },
      "icons": {
        "16": "icon-16.png",
        "24": "icon-24.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      },
      "browser_action": {
        "default_popup": "/default-toolbar-popup.html",
        "default_icon": {
          "48": "icon-48.png"
        }
      },
      "web_accessible_resources": [
        "tako.svg"
      ],
      "content_scripts": [
        {
          "matches": [
            "*://*.github.com/*"
          ],
          "js": [
            "content-script.js"
          ],
          "run_at": "document_end"
        }
      ],
      "background": {
        "scripts": [
          "background.js"
        ]
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app",
    "globals": {
      "chrome": true,
      "browser": true
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "import/order": [
        "error",
        {
          "newlines-between": "always-and-inside-groups",
          "groups": [
            "builtin",
            "external",
            "parent",
            "sibling",
            "index"
          ]
        }
      ],
      "curly": [
        "error",
        "all"
      ],
      "no-var": [
        "error"
      ],
      "prefer-template": [
        "error"
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "any"
        }
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "prefer-destructuring": [
        "error"
      ],
      "object-shorthand": [
        "error"
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "after-used",
          "argsIgnorePattern": "^omit_",
          "varsIgnorePattern": "^omit_"
        }
      ],
      "no-unused-expressions": [
        "error",
        {
          "allowShortCircuit": false,
          "allowTernary": false
        }
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "file-loader": "^6.0.0",
    "generate-json-webpack-plugin": "^0.3.1",
    "react-query-devtools": "^1.0.13",
    "style-loader": "^1.1.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-extension-reloader": "^1.1.4"
  },
  "dependencies": {
    "array-sort": "^1.0.0",
    "bottleneck": "^2.19.5",
    "immer": "^6.0.2",
    "is-binary-path": "^2.1.0",
    "lang-map": "^0.4.0",
    "react": "^0.0.0-experimental-d7382b6c4",
    "react-dom": "^0.0.0-experimental-d7382b6c4",
    "react-query": "^1.1.7",
    "react-svg-spinner": "^1.0.4",
    "react-syntax-highlighter": "^12.2.1",
    "react-use-hover": "^1.0.0",
    "styled-components": "^5.0.1",
    "use-timeout": "^1.1.0",
    "zip-webpack-plugin": "^3.0.0",
    "zustand": "^2.2.3"
  }
}
